@model GobEfi.Web.Data.Entities.UnidadMedida

@{
    ViewData["Title"] = "Delete";
}

<h2>Eliminar</h2>

<h3>¿Esta seguro de eliminar la unidad de medida?</h3>
<div>
    <h4>@Model.Nombre</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Abrv)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Abrv)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @await Html.PartialAsync("../Shared/_BtnActions", new BtnActions { Eliminar = true }) |
        @await Html.PartialAsync("../Shared/_BtnActions", new BtnActions { Volver = true })
    </form>
</div>


<script>
    $("body").on("click", "#btnActions-btnVolver", function (e) {
        e.preventDefault();
        window.location = "@Url.Action("Index","AdminEmpresaDistribuidora")";
    });
</script>

