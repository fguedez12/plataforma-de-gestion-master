@model GobEfi.Web.Models.EnergeticoModels.EnergeticoModel

@{
    ViewData["Title"] = "Delete";
}


<div class="row">
    <div class="col-12">
        <h4>Eliminar Energético @Model.Nombre</h4>
    </div>
    <hr />
</div>
<div class="card container">
    <div class="row">
        <div class="col-md-12">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Icono)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Icono)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Posicion)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Posicion)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.PermiteMedidor)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PermiteMedidor)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Activo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Activo)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                @await Html.PartialAsync("../Shared/_BtnActions", new BtnActions { Eliminar = true, Volver = true })
            </form>
        </div>
    </div>
</div>

<script>
     $("body").on("click", "#btnActions-btnVolver", function (e) {
        e.preventDefault();
        window.location = "@Url.Action("Index","AdminEnergetico")";
     });
</script>