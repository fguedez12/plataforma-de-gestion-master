@model GobEfi.Web.Models.EnergeticoModels.EnergeticoModel

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-12">
        <h4>Nuevo Energético</h4>
    </div>
    <hr />
</div>
<div class="card container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Icono" class="control-label"></label>
                    <input asp-for="Icono" class="form-control" />
                    <span asp-validation-for="Icono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Posicion" class="control-label"></label>
                    <input asp-for="Posicion" class="form-control" />
                    <span asp-validation-for="Posicion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="PermiteMedidor" /> @Html.DisplayNameFor(model => model.PermiteMedidor)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Activo" /> @Html.DisplayNameFor(model => model.Activo)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    @await Html.PartialAsync("../Shared/_BtnActions", new BtnActions { Crear = true, Volver = true })
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#btnCrear").click(function () {
            $("#editForm").submit();
        });
    });

    $("body").on("click", "#btnActions-btnVolver", function (e) {
        e.preventDefault();
        window.location = "@Url.Action("Index","AdminEnergetico")";
     });
</script>