@model EdificioModel

@{
    ViewData["Title"] = "Detalle";
}

<div class="card">
    <div class="card-body">
        <h2>@Model.Direccion</h2>
        <h4></h4>
        <div class="form-group">
            <label asp-for="Calle" class="control-label"></label>
            <input asp-for="Calle" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Numero" class="control-label"></label>
            <input asp-for="Numero" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label>Regiones</label>
            <select class="form-control" asp-for="RegionId" asp-items="ViewBag.Regiones" disabled>
                <option>@Constants.Titles.SELECCIONE</option>
            </select>
        </div>
        <div class="form-group">
            <label>Provincias</label>
            <select class="form-control" asp-for="ProvinciaId" disabled>
                <option>@Constants.Titles.SELECCIONE</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="ComunaId" class="control-label"></label>
            <select asp-for="ComunaId" class="form-control" disabled>
                <option>@Constants.Titles.SELECCIONE</option>
            </select>
            <input asp-for="ComunaId" type="hidden" />
        </div>
    </div>
</div>

<br />

@await Html.PartialAsync("../Shared/_BtnActions", new BtnActions { Volver = true })

<script src="~/js/AdminEdificio/Details.js" asp-append-version="true"></script>

<script>
    $("body").on("click", "#btnActions-btnVolver", function (e) {
        e.preventDefault();
        window.location = "@Url.Action("Index","AdminEdificio")";
    });
</script>