@model RegistroViewModel
@{
    Layout = "/Views/Account/_Layout.cshtml";
    ViewData["Title"] = "Nuevo usuario";
}

<h2 class="mt-4">@ViewData["Title"]</h2>
<h5>Ingese los siguientes datos y un administrador se comunicara con usted.</h5>
@if (ViewBag.Resultado)
{
    <div class="alert alert-success">Datos guardados correctamente</div>
}

<form method="post" asp-controller="Account" asp-action="Register" class="mt-4">
    <div class="form-group">
        <label asp-for="Nombres"></label>
        <input class="form-control" type="text" asp-for="Nombres" />
        <span class="text-danger" asp-validation-for="Nombres"></span>
    </div>
    <div class="form-group">
        <label asp-for="Apellidos"></label>
        <input class="form-control" type="text" asp-for="Apellidos" />
        <span class="text-danger" asp-validation-for="Apellidos"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" type="email" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input class="form-control" type="tel" asp-for="Telefono" />
        <span class="text-danger" asp-validation-for="Telefono"></span>
    </div>
    <div class="form-group">
        <label asp-for="MinisterioId"></label>
        @if (ViewBag.Instituciones != null)
        {
            @Html.DropDownListFor(model => model.MinisterioId, ViewBag.Instituciones as SelectList, "--Seleccione--", new { @class = "form-control" })
        }
        <span class="text-danger" asp-validation-for="MinisterioId"></span>
    </div>
    <div class="form-group">
        <label asp-for="ServicioId"></label>
        @if (ViewBag.Servicios != null)
        {
            @Html.DropDownListFor(model => model.ServicioId, ViewBag.Servicios as SelectList, "--Seleccione--", new { @class = "form-control" })
        }
        else
        {
            @Html.DropDownListFor(model => model.ServicioId, new SelectList(" "), "--Seleccione--", new { @class = "form-control" })
        }

        <span class="text-danger" asp-validation-for="ServicioId"></span>
    </div>
    <div id="otroServicio" class="form-group">
        <label asp-for="OtroServicio"></label>
        <input class="form-control" type="text" asp-for="OtroServicio" />
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
<br />
<a asp-action="login">Volver</a>
<script>
    $(document).ready(function () {
        $("#otroServicio").prop("hidden", true);

        if ($("#MinisterioId").val() == "") {
            $("#ServicioId").prop("disabled", true);
        };

        if ($("#ServicioId").val() == "-1") {
            $("#otroServicio").prop("hidden", false);
        };

        $("#MinisterioId").change(function () {
            if ($("#MinisterioId").val() == "") {
                $("#ServicioId").empty();
                $("#ServicioId").append(`<option value="">--Seleccione--</option>`);
                $("#ServicioId").prop("disabled", true);
            } else {
                LoadServicios();
            }
        });

        $("#ServicioId").change(function () {
            if ($("#ServicioId").val() == "-1") {
                $("#otroServicio").prop("hidden", false);
            } else {
                $("#OtroServicio").val("");
                $("#otroServicio").prop("hidden", true);
            }

        });
    });

    function LoadServicios() {
        $.get("/Account/GetServicios", { ministerioId: $("#MinisterioId").val() }, function (data) {
            $("#ServicioId").empty();
            $("#ServicioId").prop("disabled", false);
            $("#ServicioId").append(`<option value="">--Seleccione--</option>`);
            $.each(data, function (index, row) {
                $("#ServicioId").append(`<option value=${row.id}>${row.nombre}</option>`);
            });
            $("#ServicioId").append(`<option value="-1">Otro</option>`);


            @*if () {
                 $("#ServicioId").val(@Model.ServicioId);
            }*@


        });
    }
</script>

